{
	"name": "twofactor_gateway/0.18.0",
	"description": "TwoFactor Gateway for Nextcloud 21-24 with PHP 7.3-8.0",
	"require": {
		"php": "^7.3|^8",
		"christophwurst/nextcloud": "^23.0.2",
		"telegram-bot/api": "^2.3"
	},
	"require-dev": {
		"christophwurst/nextcloud_testing": "^0.12",
		"nextcloud/coding-standard": "^0.5.0",
		"roave/security-advisories": "dev-master"
	},
	"config": {
		"optimize-autoloader": true,
		"classmap-authoritative": true,
		"platform": {
			"php": "7.3"
		}
	},
	"scripts": {
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
		"test": "phpunit -c tests/phpunit.xml",
		"test:unit": "phpunit -c tests/phpunit.xml tests/Unit",
		"test:unit:dev": "phpunit -c tests/phpunit.xml tests/Unit --no-coverage"
	}
}
